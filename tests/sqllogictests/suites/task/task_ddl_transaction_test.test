CREATE TASK transactionTask
  WAREHOUSE = 'mywh'
  SCHEDULE = USING CRON '0 0 0 1 1 ? 2100'
  AS BEGIN
    SELECT 1;
    BEGIN;
    delete from t where c = ';';
    vacuum table t;
    merge into t using s on t.id = s.id when matched then update *;
    COMMIT;
  END;


