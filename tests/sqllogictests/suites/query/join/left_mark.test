query II
SELECT
    e.employee_id,
    d.department_name
FROM
    employees e
INNER JOIN
    departments d
ON
    e.employee_id = d.manager_id
WHERE
    e.salary > ALL (
        SELECT salary
        FROM salaries
        WHERE employee_id <> e.employee_id
    )
ORDER BY employee_id;
