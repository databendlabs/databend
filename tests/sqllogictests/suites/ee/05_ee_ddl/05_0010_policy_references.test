statement ok
drop row access policy if exists rap_multi_case1;

statement ok
drop masking policy if exists maska1;

statement ok
drop masking policy if exists mask_ssn_conditional1;

statement ok
CREATE ROW ACCESS POLICY rap_multi_case1 AS (UserId string, Department string) RETURNS boolean ->
  CASE
    WHEN current_role() = 'admin' THEN true
    WHEN Department = 'Engineering' THEN true
    ELSE false
  END;

statement ok
CREATE MASKING POLICY maska1 AS (val int) RETURNS int -> CASE WHEN current_role() IN ('non_exists_role') THEN VAL ELSE 200 END comment = 'this is a masking policy';

statement ok
CREATE MASKING POLICY mask_ssn_conditional1 AS (val STRING, user_role STRING) RETURNS STRING ->
  CASE
    WHEN user_role = current_role() THEN val
    ELSE '***-**-****'
  END
COMMENT = 'Mask SSN conditionally based on role';

statement ok
create table employees1(
    id int,
    name string,
    ssn string,
    salary int,
    department string,
    role string
);

statement ok
alter table employees1 modify column ssn set masking policy mask_ssn_conditional1 using (ssn, role);

statement ok
alter table employees1 modify column salary set masking policy maska1;

statement ok
alter table employees1 add row access policy rap_multi_case1 on (name, department);

statement ok
create table employees2(
    id int,
    name string,
    ssn string,
    salary int,
    department string,
    role string
);

statement ok
alter table employees2 modify column ssn set masking policy mask_ssn_conditional1 using (ssn, role);

