namespace GeoBuf;

enum InnerObjectKind:ubyte {
  Unknown = 0,
  Point = 1,
  LineString = 2,
  Polygon = 3,
  MultiPoint = 4,
  MultiLineString = 5,
  MultiPolygon = 6,
  Collection = 7,
}

table InnerObject {
  wkb_type: InnerObjectKind (id: 0);
  point_offsets: [uint32] (id: 1);
  ring_offsets: [uint32] (id: 2);

  collection: [InnerObject] (id: 3);

  // For GeoJSON compatibility
  properties: [ubyte] (id: 4, flexbuffer);
}

table Object {
  srid: int32 (id: 0);
  point_offsets: [uint32] (id: 1);
  ring_offsets: [uint32] (id: 2);

  collection: [InnerObject] (id: 3);

  // For GeoJSON compatibility
  properties: [ubyte] (id: 4, flexbuffer);
}
 
root_type Object;
